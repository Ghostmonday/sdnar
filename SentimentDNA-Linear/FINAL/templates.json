{
  "templates": {
    "epic": {
      "name": "Epic Template",
      "description": "Template for top-level epic issues",
      "fields": [
        {"name": "Objective", "type": "text", "required": true},
        {"name": "Gate Criteria", "type": "text", "required": true},
        {"name": "Evidence Required", "type": "text", "required": true},
        {"name": "Risks", "type": "relation", "required": false},
        {"name": "Owner", "type": "user", "required": true},
        {"name": "Due Date", "type": "date", "required": false}
      ],
      "sections": ["Scope", "Milestones", "Automation Jobs", "SLOs", "Runbooks", "Dependencies"]
    },
    "task": {
      "name": "Task Template",
      "description": "Template for executable work items",
      "fields": [
        {"name": "Acceptance Criteria", "type": "text", "required": true},
        {"name": "Evidence Checklist", "type": "checklist", "required": true, "items": ["Data captured", "Evidence attached", "Tests passed", "Gate verified", "Comms updated"]},
        {"name": "Risk Linkage", "type": "relation", "required": false},
        {"name": "Rollback Steps", "type": "text", "required": false},
        {"name": "Owner", "type": "user", "required": true},
        {"name": "Reviewer", "type": "user", "required": false}
      ]
    },
    "test": {
      "name": "Test Template",
      "description": "Template for test cases",
      "fields": [
        {"name": "Scenario", "type": "text", "required": true},
        {"name": "Inputs", "type": "text", "required": true},
        {"name": "Expected Outputs", "type": "text", "required": true},
        {"name": "Actual Result", "type": "select", "required": true, "options": ["Not Run", "Pass", "Fail", "Blocked"]},
        {"name": "Artifacts", "type": "attachment", "required": false},
        {"name": "Reviewer", "type": "user", "required": true}
      ],
      "behavior": {"blocks_parent": true, "requires_pass_to_proceed": true}
    },
    "runbook": {
      "name": "Runbook Template",
      "description": "Template for operational procedures",
      "sections": [
        {"name": "Preconditions", "description": "What must be true before starting"},
        {"name": "Steps", "description": "Numbered step-by-step instructions"},
        {"name": "Verification", "description": "How to confirm success"},
        {"name": "Rollback", "description": "Steps to undo changes"},
        {"name": "Logs to Capture", "description": "What evidence to preserve"},
        {"name": "Escalation Contacts", "description": "Who to call if issues arise"}
      ]
    },
    "risk": {
      "name": "Risk Template",
      "description": "Template for tracked hazards",
      "fields": [
        {"name": "Likelihood", "type": "select", "required": true, "options": ["Low", "Medium", "High", "Critical"]},
        {"name": "Impact", "type": "select", "required": true, "options": ["Low", "Medium", "High", "Critical"]},
        {"name": "Mitigation", "type": "text", "required": true},
        {"name": "Trigger", "type": "text", "required": true},
        {"name": "Owner", "type": "user", "required": true},
        {"name": "Review Date", "type": "date", "required": true}
      ],
      "policy": {"high_impact_requires_mitigation": true, "blocks_live_state_if_unmitigated": true}
    },
    "automation": {
      "name": "Automation Template",
      "description": "Template for automated jobs",
      "fields": [
        {"name": "Trigger", "type": "select", "required": true, "options": ["Scheduled", "On-demand", "Event-driven", "On completion"]},
        {"name": "Schedule", "type": "text", "required": false},
        {"name": "Steps", "type": "text", "required": true},
        {"name": "Retry Policy", "type": "text", "required": true},
        {"name": "Fail Action", "type": "text", "required": true},
        {"name": "Rollback", "type": "text", "required": false}
      ]
    }
  },
  "linear_cli_notes": {
    "usage": "Templates are reference-only. Linear does not support template import via CLI. Create templates manually in Linear Settings > Templates after import.",
    "custom_fields": "Custom fields must be created in Linear Settings > Team Settings > Custom Fields before they can be used."
  }
}
